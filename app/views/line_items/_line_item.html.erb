<div class="line-item list-group-item">
  <div class="row">
    <!-- Product image -->
    <div class="col-md-2">
      <%= image_tag line_item.product.image.thumb.url, class: 'img-thumbnail', alt: line_item.product.name %>
    </div>

    <!-- Product details -->
    <div class="col-md-6">
      <h5><%= line_item.product.name %></h5>
      <p><%= line_item.product.description %></p>
    </div>

    <!-- Quantity and Line Item total -->
    <div class="col-md-2 text-center">
      <p>Quantity: <%= line_item.quantity %></p>
    </div>

    <div class="col-md-2 text-center">
    <p>Total: <%= line_item.total_price.format(symbol: true, no_cents_if_whole: true) %></p>
    </div>
  </div>
</div>
